  "sample_requests": {
    "register_player": {
      "method": "POST",
      "url": "http://localhost:5001/api/auth/register",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "user_id": "newplayer001",
        "first_name": "New",
        "last_name": "Player",
        "email": "newplayer@example.com",
        "mobile": "1111111111",
        "password": "password123",
        "alternate_mobile": "2222222222",
        "address": "New Player Address",
        "city": "Chennai",
        "state": "Tamil Nadu",
        "pin_code": "600001",
        "region": "South"
      }
    },
    "login_admin": {
      "method": "POST",
      "url": "http://localhost:5001/api/auth/login",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "email_or_mobile": "admin@kismatx.com",
        "password": "admin123"
      }
    },
    "create_role": {
      "method": "POST",
      "url": "http://localhost:5001/api/admin/roles",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer YOUR_ADMIN_TOKEN"
      },
      "body": {
        "name": "game_master",
        "description": "Game master with special game control permissions",
        "permissions": [3, 8, 9, 10]
      }
    },
    "assign_role_to_user": {
      "method": "POST",
      "url": "http://localhost:5001/api/admin/users/USER_ID/roles",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer YOUR_ADMIN_TOKEN"
      },
      "body": {
        "role_ids": [1, 2]
      }
    }
  },
  "testing_workflow": [
    "1. Register admin user (admin@kismatx.com)",
    "2. Login as admin to get admin token",
    "3. Create roles and permissions",
    "4. Register player users",
    "5. Assign roles to users",
    "6. Test user login and profile access",
    "7. Test admin functions (user management, audit logs)",
    "8. Test role-based access control"
  ]
