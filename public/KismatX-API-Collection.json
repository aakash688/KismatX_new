    {
      "name": "üîê Authentication",
      "description": "Authentication flows for KismatX. Login is restricted to user_id + password only. Register creates a player by default. Use the returned tokens for protected routes.",
      "item": [
        {
          "name": "Register Player",
          "description": "Register a Player. Requires deposit_amount. profile_pic optional.",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"player001\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"mobile\": \"1234567890\",\n  \"password\": \"password123\",\n  \"user_type\": \"player\",\n  \"deposit_amount\": 250.50,\n  \"profile_pic\": null,\n  \"alternate_mobile\": \"9876543210\",\n  \"address\": \"123 Gaming Street\",\n  \"city\": \"Mumbai\",\n  \"state\": \"Maharashtra\",\n  \"pin_code\": \"400001\",\n  \"region\": \"West\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Register Admin",
          "description": "Register an Admin. deposit_amount ignored, profile_pic optional.",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
